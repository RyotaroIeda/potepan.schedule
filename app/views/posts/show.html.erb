<h2>スケジュール詳細</h2>
<div class = "schedule_detail">
    <table>
        <tbody>
            <tr>
                <td>タイトル</td>
                <td><%= @post.title %></td>
            </tr>
            <tr>
                <td>開始日</td>
                <td><%= @post.start_date %></td>
            </tr>
            <tr>
                <td>投稿日時</td>
                <td><%= @post.created_at.strftime("%Y-%m-%d") %></td>
            </tr>
            <tr>
                <td>終日</td>
                <td>
                <% if @post.whole_day == true %>
                <%= "○" %>
                <% elsif @post.whole_day == false %>
                <%= "" %>
                <% end %>
                </td>
            </tr>
            <tr>
                <td>スケジュールメモ</td>
                <td><%= @post.text %></td>
            </tr>
        </tbody>
    </table>
</div>

<div class="links">
    <%= link_to "スケジュール一覧に戻る", :posts %><br>
    <%= link_to "スケジュールを編集する", :edit_post %><br>
    <%= button_to "スケジュールを削除する", @post, method: :delete %>
</div>