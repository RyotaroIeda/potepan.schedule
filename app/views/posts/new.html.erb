<div class="main_content">
	<h2>スケジュール新規作成</h2>
	
	<% @post.errors.full_messages.each do |message| %>
		<div class="errors_message">
		<%= message %>
		</div>
	<% end %>
	
	<%= form_with model: @post do |f| %>
	<table>
		<tbody>
			<tr>
				<td>タイトル</td>
				<td><%= f.text_field :title %></td>
			</tr>
			<tr>
				<td>開始日</td>
				<td><%= f.date_field :start_date %></td>
			</tr>
			<tr>
				<td>終了日</td>
				<td><%= f.date_field :end_date %></td>
			</tr>
			<tr>
				<td>終日</td>
				<td><%= f.check_box :whole_day, {}, true, false %><br>終日の場合はチェックを入れます</td>
			</tr>
			<tr>
				<td>スケジュールメモ</td>
				<td><%= f.text_area :text %></td>
			</tr>
		</tbody>
	</table>
	<div class="submit_button">
	<%= f.submit "スケジュールを新規登録する" %><br>
	<%= link_to("スケジュール一覧に戻る", "/") %>
	<% end %>
	</div>
</div>