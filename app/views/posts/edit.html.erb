<h2>スケジュール編集</h2>

<div class="schedule_edit">
    
    <% @post.errors.full_messages.each do |message| %>
        <div class="errors_message">
        <%= message %>
        </div>
    <% end %>
    
    <%= form_with model: @post do |f| %>
    <table>
        <tbody>
            <tr>
                <td>タイトル</td>
                <td><%= f.text_field :title %></td>
            </tr>
            <tr>
                <td>開始日</td>
                <td><%= f.date_field :start_date %></td>
            </tr>
            <tr>
                <td>終了日</td>
                <td><%= f.date_field :end_date %></td>
            </tr>
            <tr>
                <td>終日</td>
                <td><%= f.check_box :whole_day, {}, true, false %><br>終日の場合はチェックを入れます</td>
            </tr>
            <tr>
                <td>スケジュールメモ</td>
                <td><%= f.text_area :text %></td>
            </tr>
        </tbody>
    </table>
</div>

<div class="submit_button">
<input type="submit" value="スケジュールの編集を完了する"><br>
<%= link_to("スケジュール一覧に戻る", "/") %><br>
<% end %>
</div>